---
import Layout from "../layouts/Layout.astro";
import { projectsPageContent } from "../config";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout seo={projectsPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Projects</h1>
    <p class="opacity-60 mb-10">{projectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        projectsPageContent.projects.map((project, index) => (
            <ProjectCard {...project} index={index} />
        ))
      }
    </div>
    <div class="opacity-60 mb-10 space-y-4">
      <div>
        <strong>Other Projects:</strong><br />
        {projectsPageContent.other.projects}
      </div>
      <div>
        <strong>Responsibilities:</strong><br />
        {projectsPageContent.other.responsibilities}
      </div>
      <div>
        <strong>Technologies:</strong><br />
        {projectsPageContent.other.technologies}
      </div>
    </div>  </section>
</Layout>
